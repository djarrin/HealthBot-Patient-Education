# HealthBot Local Development Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required for Backend)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here

# =============================================================================
# AWS Configuration (Local Development)
# =============================================================================
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# Backend Configuration
# =============================================================================
# DynamoDB Local Configuration
DYNAMODB_ENDPOINT=http://localhost:8000

# Serverless Offline Configuration
IS_OFFLINE=true

# Backend API URL (for frontend to connect to)
BACKEND_API_URL=http://localhost:3001

# =============================================================================
# Frontend Configuration
# =============================================================================
# React App Environment Variables
REACT_APP_COGNITO_REGION=us-east-1
REACT_APP_COGNITO_USER_POOL_ID=your-user-pool-id
REACT_APP_COGNITO_CLIENT_ID=your-client-id
REACT_APP_API_GATEWAY_URL=http://localhost:3001

# =============================================================================
# Optional: Override table names for local development
# =============================================================================
# CHAT_SESSIONS_TABLE=healthbot-backend-chat-sessions-dev
# USER_MESSAGES_TABLE=healthbot-backend-user-messages-dev
# SESSION_STATE_TABLE=healthbot-backend-session-state-v2-dev
